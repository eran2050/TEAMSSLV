<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.jboss.org/dtd/hibernate/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>

		<!-- JDBC connection pool (use the built-in) -->
		<property name="connection.pool_size">10</property>

		<!-- Echo all executed SQL to stdout -->
		<property name="show_sql">true</property>

		<!-- Hibernate Annotations (and package-info.java) -->
		<mapping class="net.voaideahost.sslv.domain.users.Users" />
		<mapping class="net.voaideahost.sslv.domain.ads.Ads" />
		<mapping class="net.voaideahost.sslv.domain.addesc.AdDesc" />
		<mapping class="net.voaideahost.sslv.domain.ads.NewAd" />
		<mapping class="net.voaideahost.sslv.domain.addesc.NewAdDesc" />

	</session-factory>

</hibernate-configuration>
